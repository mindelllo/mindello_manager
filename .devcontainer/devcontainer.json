{
    "name": "Matter Python DevContainer",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-python-devicesimulator",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && sudo apt-get update && sudo apt-get install -y tcpdump libpcap-dev"
}
